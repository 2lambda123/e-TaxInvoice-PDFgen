<Window x:Class="eTaxInvoicePdfGenerator.Dialogs.AlertBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:eTaxInvoicePdfGenerator.Dialogs"
        mc:Ignorable="d"
         Title="คำเตือน" Height="150" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Loaded="Window_Loaded" WindowStyle="None" Style="{StaticResource MainWindow}">
    <Window.Resources>
        <ImageBrush x:Key="Background" ImageSource="/eTaxInvoicePdfGenerator;component/in/elements/main_BG@2x.jpg" />
    </Window.Resources>
    <Window.Background>
        <StaticResource ResourceKey="Background" />
    </Window.Background>
    <Grid>
        <Button x:Name="okBtn" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" HorizontalAlignment="Stretch" Margin="0,91,0,0" VerticalAlignment="Top" Width="75" Click="okBtn_Click">
            <Image Source="/eTaxInvoicePdfGenerator;component/in/elements/btn_ok.png" Style="{StaticResource imageBtn}" />
        </Button>
        <TextBlock x:Name="msgLb" HorizontalAlignment="Stretch" Margin="20,25,20,0" TextWrapping="Wrap" Text="ข้อความ" VerticalAlignment="Top" TextAlignment="Center"/>
    </Grid>
</Window>
