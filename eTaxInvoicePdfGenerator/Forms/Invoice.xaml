            <TextBox x:Name="contactTb" HorizontalAlignment="Left" Height="23" Margin="560,717,0,0" VerticalAlignment="Top" Width="360" TabIndex="8" MaxLength="140"/>
            <Label x:Name="label9" Content="เบอร์โทรศัพท์" HorizontalAlignment="Left" Margin="326,748,0,0" VerticalAlignment="Top" FontWeight="Bold" Height="28"/>
            <Label x:Name="label10" Content="เบอร์โทรสาร" HorizontalAlignment="Left" Margin="326,781,0,0" VerticalAlignment="Top"/>
            <Label x:Name="label11" Content="+66-" HorizontalAlignment="Left" Margin="560,748,0,0" VerticalAlignment="Top" Height="28" />
            <Label x:Name="label12" Content="+66-" HorizontalAlignment="Left" Margin="560,781,0,0" VerticalAlignment="Top" />
