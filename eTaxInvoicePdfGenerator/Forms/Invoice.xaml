            <Button x:Name="shutdownBtn" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Margin="0,0,0,0" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Click="shutdownBtn_Click">
                <Image Source="/eTaxInvoicePdfGenerator;component/in/elements/btn_close@2x.png" Style="{StaticResource imageBtn}"/>
            </Button>
            <ComboBox x:Name="provinceCbb" HorizontalAlignment="Left" Height="23" Margin="560,451,0,0" VerticalAlignment="Top" Width="360" />
            <ComboBox x:Name="amphoeCbb" HorizontalAlignment="Left" Height="23" Margin="560,481,0,0" VerticalAlignment="Top" Width="360"/>
            <ComboBox x:Name="tambonCbb" HorizontalAlignment="Left" Height="23" Margin="560,514,0,0" VerticalAlignment="Top" Width="360"/>
            <Label x:Name="label" Content="จังหวัด" HorizontalAlignment="Left" Margin="326,449,0,0" VerticalAlignment="Top"/>
            <Label x:Name="label16_Copy" Content="อำเภอ/เขต" HorizontalAlignment="Left" Margin="326,479,0,0" VerticalAlignment="Top"/>
            <Label x:Name="label17_Copy" Content="ตำบล/แขวง" HorizontalAlignment="Left" Margin="326,512,0,0" VerticalAlignment="Top"/>
