            </Button>
            <Button x:Name="exitBtn" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" HorizontalAlignment="Left" Margin="640,1310,0,0" Width="143" Click="exitBtn_Click" Height="47" VerticalAlignment="Top" TabIndex="24">
                <Image Source="/eTaxInvoicePdfGenerator;component/in/elements/btn_backHome.png" Style="{StaticResource imageBtn}" />
            </Button>
            <TextBox x:Name="vatTb" Height="23" Margin="522,1218,0,0" Text="7.00" VerticalAlignment="Top" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Width="50" KeyUp="vatTb_KeyUp" MaxLength="5" TabIndex="22"/>
            <TextBox x:Name="extraDiscountRateTb" HorizontalAlignment="Left" Height="23" Margin="707,1163,0,0" Text="0.00" VerticalAlignment="Top" Width="50" HorizontalContentAlignment="Right" KeyUp="extraDisCountRateTb_KeyUp" MaxLength="5" TabIndex="20" GotFocus="extraDiscountRateTb_GotFocus" LostFocus="extraDiscountRateTb_LostFocus"/>
            <Label x:Name="label20" Content="ส่วนลดเพิ่มเติม" HorizontalAlignment="Left" Margin="593,1161,0,0" VerticalAlignment="Top" />
