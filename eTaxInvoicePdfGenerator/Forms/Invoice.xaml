            <Label x:Name="label27" Content="บาท" HorizontalAlignment="Left" Margin="880,1133,0,0" VerticalAlignment="Top" />
            <Label x:Name="label28" Content="บาท" HorizontalAlignment="Left" Margin="880,1161,0,0" VerticalAlignment="Top" />
            <Label x:Name="label29" Content="บาท" HorizontalAlignment="Left" Margin="880,1189,0,0" VerticalAlignment="Top" />
            <Label x:Name="label30" Content="บาท" HorizontalAlignment="Left" Margin="880,1216,0,0" VerticalAlignment="Top" />
            <Label x:Name="label31" Content="บาท" HorizontalAlignment="Left" Margin="880,1245,0,0" VerticalAlignment="Top" />
            <ComboBox x:Name="nameCbb" HorizontalAlignment="Left" Margin="560,360,0,0" VerticalAlignment="Top" Width="360" IsEditable="True" SelectionChanged="nameCbb_SelectionChanged" TabIndex="1" Height="22" IsTextSearchEnabled="false"/>
