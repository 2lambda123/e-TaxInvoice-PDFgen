            <Button x:Name="deleteItemBtn" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Margin="823,980,0,0" VerticalAlignment="Top" Click="deleteItemBtn_Click" TabIndex="16" Height="29" Width="96" HorizontalAlignment="Left">
