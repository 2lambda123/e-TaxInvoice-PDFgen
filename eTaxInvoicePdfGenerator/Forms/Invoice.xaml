                    <RadioButton x:Name="is_first" GroupName="reference" Content="ใบกำกับภาษีปกติ" HorizontalAlignment="Left" Margin="-3,13,0,0" VerticalAlignment="Top" Height="15" Checked="is_first_Checked"/>
                    <RadioButton x:Name="is_replace" GroupName="reference" Content="ยกเลิกใบกำกับภาษีเดิม" HorizontalAlignment="Left" Margin="137,13,0,0" VerticalAlignment="Top" Height="15" Checked="is_replace_Checked"/>
                    <Label x:Name="label15" Content="เหตุผลในการยกเลิกใบกำกับภาษีเดิม" HorizontalAlignment="Left" Margin="-3,38,0,0" VerticalAlignment="Top" />
                    <TextBox x:Name="purposeTb" HorizontalAlignment="Left" Height="23" Margin="309,42,0,0" VerticalAlignment="Top" Width="281" TabIndex="13" MaxLength="256"/>
                    <Label x:Name="label16" Content="เลขที่ของใบกำกับภาษีเดิม" HorizontalAlignment="Left" Margin="-3,67,0,0" VerticalAlignment="Top" />
