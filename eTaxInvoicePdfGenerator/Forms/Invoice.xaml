                <ListView.Resources>
                    <!--<DataTemplate x:Key="ItemListComboBox">
                    <ComboBox Margin="0,3" x:Name="ItemComboBox"
                          ItemsSource="{Binding RelativeSource={RelativeSource AncestorType=ListBox},Path=DataContext.ItemList}"
                              DisplayMemberPath="name"
                              SelectedValue="{Binding Path=name, Mode=TwoWay}"
                              />
                </DataTemplate>-->
                </ListView.Resources>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="" Width="30">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding isSelected, UpdateSourceTrigger=PropertyChanged}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="ลำดับที่" DisplayMemberBinding="{Binding number}"  Width="50" />

                        <GridViewColumn Header="รายการ *" DisplayMemberBinding="{Binding itemName}"  Width="150" />
                        <GridViewColumn Header="จำนวน *" DisplayMemberBinding="{Binding quantityText}" Width="70"/>
                        <GridViewColumn Header="หน่วย" DisplayMemberBinding="{Binding unit}" Width="120"/>
                        <GridViewColumn Header="ราคาต่อหน่วย *" DisplayMemberBinding="{Binding pricePerUnitText}" Width="110"/>
                        <GridViewColumn Header="ส่วนลด" DisplayMemberBinding="{Binding discountText}" Width="100" />
                        <!--<GridViewColumn Header="" DisplayMemberBinding="{Binding discountTotal}" Width="50"/>-->
                        <GridViewColumn Header="จำนวนเงิน (ไม่รวม VAT)" Width="160" >
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding itemTotalText}" TextAlignment="Right" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="" Width="60">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                <Hyperlink NavigateUri="{Binding id}" Click="OnHyperlinkClick">
                                    <TextBlock Text="[แก้ไข]" />
                                </Hyperlink>
                            </TextBlock>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
            <Label x:Name="label19" Content="ราคารวมทั้งสิ้น" HorizontalAlignment="Left" Margin="688,1133,0,0" VerticalAlignment="Top" />
            <TextBox x:Name="lineTotalTb" HorizontalAlignment="Left" Height="23" Margin="795,1135,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="80" Text="0.00" TextAlignment="Right" IsEnabled="False"/>
            <TextBox x:Name="extraDiscountTb" HorizontalAlignment="Left" Height="23" Margin="795,1163,0,0" VerticalAlignment="Top" Width="80" Text="0.00" TextAlignment="Right" MaxLength="10" KeyUp="extraDiscountTb_KeyUp" TabIndex="21" GotFocus="extraDiscountTb_GotFocus" LostFocus="extraDiscountTb_LostFocus"/>
            <TextBox x:Name="basisAmountTb" HorizontalAlignment="Left" Height="23" Margin="795,1191,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="80" Text="0.00" TextAlignment="Right" IsEnabled="False"/>
            <TextBox x:Name="taxTotalTb" HorizontalAlignment="Left" Height="23" Margin="795,1218,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="80" Text="0.00" TextAlignment="Right" IsEnabled="False"/>
